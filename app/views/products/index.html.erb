<h1>Products</h1>

<table>
  <thead>
    <th></th>
    <th>Name</th>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= link_to image_tag(product.image_url, width: 50), product %></td>
        <td><%= link_to product.name, product %></td>
      </tr>
    <% end %>
  </tbody>
</table>
